<div class="page-header">
    <h1>Listing domains <small> ( <%= link_to 'Create domain', new_domain_path %> ) </small></h1>
    <div class='pull-right' style='margin-top:-30px'>
        <%= form_tag domains_path, method: 'get', class: 'form-inline' do %>
            <div class="form-group"><%= text_field_tag :search, params[:search], class: 'form-control' %></div>
            <div class="form-group">
              <%= select_tag('status_id', content_tag(:option, 'Select one...', :value => "") + content_tag(:option, 'Empty', :value => "--empty--") + options_from_collection_for_select(@statuses, 'id', 'name', params[:status_id].to_i), { :class => 'form-control' }) %>
            </div>
            <div class="form-group"><%= submit_tag "Search", :name => nil, class: 'btn' %></div>
        <% end %>
    </div>
</div>

<ol class="breadcrumb">
    <li><a href="/">Home</a></li>
    <li class="active">Domains</li>
</ol>

<table class='table table-striped table-hover'>
    <thead>
    <tr>
        <th class="col-md-9">Url</th>
        <th>Status</th>
        <th>Links</th>
        <th></th>
        <th></th>
        <th></th>
    </tr>
    </thead>

    <tbody>
      <%= render partial: 'domain', collection: 'domains' %>
    </tbody>
</table>

<%= paginate @domains %>
